<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".roles"
    android:background="@drawable/reportbackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center|bottom"
            android:orientation="vertical"
            android:layout_marginBottom="50dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="250dp"
                app:srcCompat="@drawable/emergency"
                android:layout_gravity="start"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Incident\nReporter"
                android:textAlignment="viewStart"
                android:fontFamily="@font/ahronbd"
                android:textSize="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/reportbtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Report"
                android:layout_gravity="start"
                android:layout_marginStart="22dp"
                android:background="@drawable/rolesbtn"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ahronbd"
                android:elevation="20dp"
                />

            <Button
                android:id="@+id/adminbtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:background="@drawable/rolesbtn2"
                android:layout_gravity="start"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ahronbd"
                android:elevation="20dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>