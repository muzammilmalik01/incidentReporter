<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminlogin"
    android:background="#1d1b1b">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/adminlogo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="150dp"
                app:srcCompat="@drawable/admin" />

            <EditText
                android:id="@+id/adminusername"
                android:layout_width="250dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Admin ID"
                android:textAlignment="center"
                android:background="@drawable/edittexts"
                android:fontFamily="@font/helvetica"/>

            <EditText
                android:id="@+id/adminpassword"
                android:layout_width="250dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:background="@drawable/edittexts"
                android:hint="Password"
                android:fontFamily="@font/helvetica"/>

            <Button
                android:id="@+id/loginbtn"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:text="Submit"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:fontFamily="@font/helvetica"
                android:textSize="12dp"/>

            <ProgressBar
                android:id="@+id/pbar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/pbar"
                android:progress="0"
                />

            <TextView
                android:id="@+id/forgetpasstext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Credential? Contact IT Department. "
                android:layout_marginTop="20dp"
                android:fontFamily="@font/helveticaroundbold"
                android:textAlignment="center"
                android:textSize="12dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>